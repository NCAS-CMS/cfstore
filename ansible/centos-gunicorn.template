[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User={{user}}
Group=nginx
WorkingDirectory={{repo_dir}}
ExecStart=/home/{{user}}/django/bin/gunicorn \
          --access-logfile - \
		  --error-logfile {{repo_dir}}/gunicorn-error.log \
          --workers 3 \
          --bind unix:{{repo_dir}}/gunicorn.sock \
          {{application}}.wsgi:application 
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target